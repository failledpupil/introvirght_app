{
  "name": "introvirght-monorepo",
  "version": "1.0.0",
  "description": "A mindful social platform for authentic self-expression",
  "scripts": {
    "setup": "node deploy-setup.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd introvirght && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd introvirght && npm run build",
    "start": "cd server && npm start",
    "deploy:setup": "node deploy-setup.js"
  },
  "keywords": [
    "social-platform",
    "mindfulness",
    "diary",
    "self-expression",
    "react",
    "nodejs",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}